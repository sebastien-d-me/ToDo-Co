{% extends "base.html.twig" %}
{% block title %}To-Do Co | Accueil{% endblock %}


{% block main %}
    <div class="justify-content-between mt-2 row">
        <div class="col-auto">
            <button class="btn btn-primary" type="button">Créer un utilisateur</button>
        </div>
        {% if app.user %}
            <div class="col-auto mt-2 mt-md-0">
                <button class="btn btn-danger" type="button">Se déconnecter</button>
            </div>
        {% endif %}
    </div>

    {% if app.user %}
        <div class="mt-2 row">
            <h1 class="fs-3">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
        </div>
    {% endif %}

    <div class="mt-2 row">
        <div class="col-12">
            <img alt="Bannière" class="w-100" loading="lazy" src="{{ asset('build/images/banner/full_banner.webp') }}">
        </div>
    </div>

    {% if app.user %}
        <form class="align-items-center mt-3 row row-cols-lg-auto">
            <div class="col-auto">
                <div class="align-items-center row">
                    <div class="col-auto">
                        <label class="form-label fw-bold" for="login_username">Nom d'utilisateur :</label>
                    </div>
                    <div class="col-auto">
                        <input class="form-control" id="login_username" type="text">
                    </div>
                </div>
            </div>
            
            <div class="col-auto mt-2 mt-md-0">
                <div class="align-items-center row">
                    <div class="col-auto">
                        <label class="form-label fw-bold" for="login_password">Mot de passe :</label>
                    </div>
                    <div class="col-auto">
                        <input class="form-control" id="login_password" type="password">
                    </div>
                </div>
            </div>
                        
            <div class="col-auto mt-3 mt-md-0">
                <button type="submit" class="btn btn-success">Se connecter</button>
            </div>
        </form>
    {% else %}
        <div class="mt-3 row">
            <div class="col-auto mt-2 mt-md-0">
                <a href="#">
                    <button class="btn btn-success" type="button">Créer une nouvelle tâche</button>
                </a>
            </div>
            <div class="col-auto mt-2 mt-md-0">
                <a href="#">
                    <button class="btn btn-info text-light" type="button">Consulter la liste des tâches à faire</button>
                </a>
            </div>
            <div class="col-auto mt-2 mt-md-0">
                <a href="#">
                    <button class="btn btn-link px-0 text-decoration-none" type="button">Consulter la liste des tâches terminées</button>
                </a>
            </div>
        </div>
    {% endif %}
{% endblock %}
