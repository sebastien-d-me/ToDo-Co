{% extends "base.html.twig" %}
{% block title %}Liste des tâches{% endblock %}
{% set pageTitle = "" %}


{% block main %}
    <div class="mt-2 row">
        <div class="col-12">
            <img alt="Bannière" class="w-100" loading="lazy" src="{{ asset('build/images/banner/small_banner.webp') }}">
        </div>
    </div>

    {% if tasks | length == 0 %} 
        <div class="alert alert-warning mt-2" role="alert">
            <span>Il n'y a pas encore de tâche enregistrée.</span>
            <a href="#">
                <button class="btn btn-warning">Créer une tâche</button>
            </a>
        </div>
    {% else %}
        <div class="row">
            <div class="col-auto mb-2 ms-auto mt-2">
                <a href="#">
                    <button class="btn btn-info text-light">Créer une tâche</button>
                </a>
            </div>
        </div>

        <div class="container px-0">
            {% for row in tasks | batch(3) %}
                <div class="mb-4 row">
                    {% for task in row %}
                        <div class="col-lg-4 col-md-12" id="{{ loop.index }}">
                            <div class="img-thumbnail h-75 overflow-auto p-2">
                                <div class="d-flex justify-content-between">
                                    <a class="fs-5 text-decoration-none" href="#">
                                        <span>{{ task.title }}</span>
                                    </a>
                                    <a class="fs-5 fw-bold text-dark text-decoration-none" href="#">
                                        <span>✗</span>
                                    </a>
                                </div>
                                <p class="mb-2 mt-4">{{ task.content }}</p>
                            </div>
                            <div class="d-flex h-25 justify-content-end mt-1 row">
                                <div class="col-3">
                                    <a href="#">
                                        <button class="btn btn-danger">Supprimer</button>
                                    </a>
                                </div>
                                <div class="col-auto">
                                    <a href="{{ path('tasks_uncompleted', {'taskId': task.id}) }}">
                                        <button class="btn btn-success">Marquer non terminée</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
